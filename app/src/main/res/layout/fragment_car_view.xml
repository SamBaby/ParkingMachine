<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context="pages.CarViewFragment">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="5"
                android:background="@drawable/input_rounded_corner_background"
                android:inputType="number"
                tools:ignore="Autofill,LabelFor" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="2"
                android:background="@drawable/clear_button"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/car_view1"
                    android:layout_width="480dp"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/input_rounded_corner_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_car1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="8"></ImageView>

                    <TextView
                        android:id="@+id/car_number1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/car_number"
                        android:textAlignment="center"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/car_time_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/entrance_time"
                        android:textSize="40sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_view2"
                    android:layout_width="480dp"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/input_rounded_corner_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_car2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="8"></ImageView>

                    <TextView
                        android:id="@+id/car_number2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/car_number"
                        android:textAlignment="center"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/car_time_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/entrance_time"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/car_view3"
                    android:layout_width="480dp"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/input_rounded_corner_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_car3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="8"></ImageView>

                    <TextView
                        android:id="@+id/car_number3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/car_number"
                        android:textAlignment="center"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/car_time_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/entrance_time"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_view4"
                    android:layout_width="480dp"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/input_rounded_corner_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_car4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="8"></ImageView>

                    <TextView
                        android:id="@+id/car_number4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/car_number"
                        android:textAlignment="center"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/car_time_4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/entrance_time"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/pick_car"
            android:textColor="@color/yellow"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="150dp"
                android:background="@drawable/next_page_button"
                android:paddingHorizontal="20dp"
                android:text="@string/previous_page"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/next_page_button"
                android:paddingHorizontal="20dp"
                android:text="@string/next_page"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/footer"
        layout="@layout/footer" />
</androidx.constraintlayout.widget.ConstraintLayout>