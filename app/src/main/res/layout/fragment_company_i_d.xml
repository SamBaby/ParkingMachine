<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context="pages.CompanyIDFragment">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/input_company_id"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/input_rounded_corner_background"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:textAlignment="textEnd"
            android:textSize="130sp"
            android:textColor="@color/black"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/input_company_id"
            android:textColor="@color/yellow"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="100sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="100sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="100sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_back"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="\u2190"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="100sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/clear_button"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="90sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="60dp"
            android:gravity="center"
            android:text="@string/no_company_id"
            android:textColor="@color/yellow"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="120dp"
                android:background="@drawable/next_page_button"
                android:text="@string/carrier_number"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="120dp"
                android:background="@drawable/next_page_button"
                android:text="@string/print_invoice"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="60dp"
            android:gravity="center"
            android:text="@string/print_invoice_time"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <include
        android:id="@+id/footer"
        layout="@layout/footer" />

</androidx.constraintlayout.widget.ConstraintLayout>